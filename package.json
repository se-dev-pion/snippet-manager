{
  "name": "snippet-manager",
  "displayName": "Snippet Manager",
  "description": "A better experience for snippets management instead of native ones",
  "version": "0.0.1",
  "icon": "./assets/icon.png",
  "publisher": "se-dev-pion",
  "repository": "https://github.com/se-dev-pion/snippet-manager",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:snippet-manager"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snippet-manager.load-config",
        "title": "Load",
        "icon": "$(add)"
      },
      {
        "command": "snippet-manager.unload-config",
        "title": "Unload",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "snippet-manager.load-config",
          "when": "view == snippet-manager.loaded-configs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "snippet-manager.unload-config",
          "when": "view == snippet-manager.loaded-configs",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet-manager",
          "title": "Snippet Manager",
          "icon": "assets/sidebar.png"
        }
      ]
    },
    "views": {
      "snippet-manager": [
        {
          "id": "snippet-manager.loaded-configs",
          "name": "Loaded Configs",
          "icon": "assets/sidebar.png"
        }
      ]
    },
    "languages": [
      {
        "id": "snippet",
        "aliases": [
          "Snippet"
        ],
        "extensions": [
          ".snippet.xml"
        ],
        "icon": {
          "light": "./assets/file.png",
          "dark": "./assets/file.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "snippet",
        "scopeName": "source.snippet",
        "path": "./syntaxes/snippet.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.c": "c",
          "meta.embedded.block.cpp": "cpp",
          "meta.embedded.block.csharp": "csharp",
          "meta.embedded.block.java": "java",
          "meta.embedded.block.kotlin": "kotlin",
          "meta.embedded.block.dart": "dart",
          "meta.embedded.block.swift": "swift",
          "meta.embedded.block.javascript": "javascript",
          "meta.embedded.block.typescript": "typescript",
          "meta.embedded.block.vue": "vue",
          "meta.embedded.block.javascriptreact": "javascriptreact",
          "meta.embedded.block.typescriptreact": "typescriptreact",
          "meta.embedded.block.svelte": "svelte",
          "meta.embedded.block.go": "go",
          "meta.embedded.block.python": "python",
          "meta.embedded.block.ruby": "ruby",
          "meta.embedded.block.shellscript": "shellscript",
          "meta.embedded.block.php": "php",
          "meta.embedded.block.perl": "perl",
          "meta.embedded.block.rust": "rust",
          "meta.embedded.block.lua": "lua",
          "meta.embedded.block.sql": "sql",
          "meta.embedded.block.odin": "odin",
          "meta.embedded.block.zig": "zig",
          "meta.embedded.block.d": "d",
          "meta.embedded.block.v": "v",
          "meta.embedded.block.scala": "scala",
          "meta.embedded.block.groovy": "groovy",
          "meta.embedded.block.fsharp": "fsharp",
          "meta.embedded.block.nim": "nim",
          "meta.embedded.block.scss": "scss",
          "meta.embedded.block.sass": "sass",
          "meta.embedded.block.less": "less",
          "meta.embedded.block.stylus": "stylus",
          "meta.embedded.block.json": "json",
          "meta.embedded.block.yaml": "yaml",
          "meta.embedded.block.toml": "toml",
          "meta.embedded.block.xml": "xml",
          "meta.embedded.block.protobuf": "protobuf",
          "meta.embedded.block.graphql": "graphql",
          "meta.embedded.block.api": "goctl",
          "meta.embedded.block.html": "html",
          "meta.embedded.block.dockerfile": "dockerfile"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "preview": "vsce publish --pre-release --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.7",
    "zod": "^4.3.6"
  }
}