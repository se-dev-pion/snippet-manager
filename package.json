{
  "name": "snippet-manager",
  "displayName": "Snippet Manager",
  "description": "A better experience for snippets management instead of native ones",
  "version": "0.0.1",
  "icon": "./assets/icon.png",
  "publisher": "se-dev-pion",
  "repository": "https://github.com/se-dev-pion/snippet-manager",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:snippet-manager"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snippet-manager.load-config",
        "title": "Load",
        "icon": "$(add)"
      },
      {
        "command": "snippet-manager.unload-config",
        "title": "Unload",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "snippet-manager.load-config",
          "when": "view == snippet-manager.loaded-configs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "snippet-manager.unload-config",
          "when": "view == snippet-manager.loaded-configs",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet-manager",
          "title": "Snippet Manager",
          "icon": "assets/sidebar.png"
        }
      ]
    },
    "views": {
      "snippet-manager": [
        {
          "id": "snippet-manager.loaded-configs",
          "name": "Loaded Configs",
          "icon": "assets/sidebar.png"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "preview": "vsce publish --pre-release --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.7",
    "zod": "^4.3.6"
  }
}